	<design:attribute name="flowName_2" label="2-Flow Name (API)"/>
	<design:attribute name="showHeader_2" label="2-Show Header"/>
	<design:attribute name="showFooter_2" label="2-Show Footer"/>

	<design:attribute name="buttonLabel_3" label="3-Button Label"/>
